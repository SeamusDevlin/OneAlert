{
    "manifest_version": 3,
    "name": "ONETrackr - Cargo Notifications",
    "version": "1.0",
    "description": "Get real-time notifications for air cargo tracking using the ONE Platform.",
    "permissions": ["storage", "notifications", "alarms"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "host_permissions": [
      "http://localhost:3000/*"
    ]
  }
  